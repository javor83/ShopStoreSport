@model ListCartLine
<h2 class="d-block text-center">@ListCartLine_caption.Title</h2>
<h4 class="d-block text-center">@ListCartLine_caption.Sum @Model.Total().ToMoney()</h4>
<table class="table table-striped table-hover">
    <tr>
        <th>@ListCartLine_caption.Name</th>
        <th>@ListCartLine_caption.Price</th>
        <th>@ListCartLine_caption.Qty</th>
    </tr>
    @for (int i = 0;i<Model.Count();i++)
    {
        <tr>
            <td>@Model.ElementAt(i).Name</td>
            <td>@Model.ElementAt(i).Price.ToMoney()</td>
            <td>
                <form method="post" asp-controller="ShopCart" asp-action="Update" asp-antiforgery="true">
                    <input type="text" asp-for="@Model.ElementAt(i).Qty" />
                    <input type="submit"
                        class="btn btn-danger"
                        value="@ListCartLine_caption.Delete" name="delete_item"/>
                    <input type="submit"
                           class="btn btn-primary"
                           value="@ListCartLine_caption.Update" name="update_item" />
                </form>
            </td>
        </tr>   
    }
</table>

